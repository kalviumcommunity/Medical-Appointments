datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  createdAt DateTime  @default(now())
  appointments Appointment[]
}

model Appointment {
  id      Int      @id @default(autoincrement())
  date    DateTime
  reason  String
  userId  Int
  user    User     @relation(fields: [userId], references: [id])
}
